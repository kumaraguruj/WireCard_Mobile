                    app:tabGravity="fill"/>-->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/overviewbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/style_header"
                            android:text="Overview"/>
                        <Button
                            android:id="@+id/servicebtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:background="@drawable/style_header"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:text="Self Service"/>

                        <Button
                            android:id="@+id/fundsbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:background="@drawable/style_header"
                            android:text="Fund Transfer"/>
                        <Button
                            android:id="@+id/reportsbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:background="@drawable/style_header"
                            android:text="Reports"/>
                    </LinearLayout>
                </HorizontalScrollView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monthly Expenses Report"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:visibility="invisible"
                    android:id="@+id/heading_chart"/>
                <ImageView
                    android:id="@+id/chartland"
                    android:layout_width="match_parent"
                    android:layout_height="270dp" />
            </LinearLayout>
